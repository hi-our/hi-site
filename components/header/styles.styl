// 头部
.header
  padding 12px 16px;
  box-sizing border-box;
  background-color #0d5afe;

  .header-main
    display flex;
    align-items center;
    justify-content space-between;
    max-width 1200px
    margin: auto
  
  .logo
    display: block;
    width: 130px;
    height: 60px;

    a
      display: block;
      width 100%;
      height 100%
      background: url(https://image-hosting.xiaoxili.com/img/20200712201536.png) no-repeat;
      background-size: contain;
      text-indent: -9999px;
      overflow: hidden;

    // background: url(https://image-hosting.xiaoxili.com/img/20200712201537.png) no-repeat;

    // background-image: url(https://image-hosting.xiaoxili.com/img/20200712201536.png);

  // navbar 导航
  .navigation-pc
  .navigation-operation
    display none;
  

// 导航菜单
.navigation
  display none;
  position fixed;
  top 0;
  left 0;
  bottom 0;
  right 0;
  z-index 10;
  padding 31px 31px 31px 40px;
  background-color rgba(13, 90, 254, .9);
  box-sizing border-box;
  animation: 0.5s navigationOpacity;
  &.active
    display block;
  
    .navigation-mobile a
      font-size 20px;  
  
  @keyframes navigationOpacity
    0%
      opacity 0;  
    
    100%
      opacity 1;  
    
  
  .navigation-menu
    position absolute;
    right 20px;
    top 26px;
    margin 0;
    > div
      width 32px;
      background-color #f3f3f3
      &:nth-child(1)
        top 12px;
        transform: rotate(45deg);
      
      &:nth-child(2)
        top 1px;
        transform: rotate(-45deg);
      
    
  
  .navigation-mobile
    margin 38px 0 36px 0;
    li
      display block
      margin-bottom 29px;
      font-size 16px;  
      &:last-child
        margin-bottom 0;

.navigation-operation
  & > button
    margin: 0px;
    padding: 0px;
    border: none;
    background: transparent;
    display inline-block;
    width 24px;
    height 24px;
    background-repeat no-repeat
    background-size contain
    outline none
    cursor pointer

    & + button
      margin-left 43px
  .mode
    background-image url("/images/icon-mode-dark.svg");  
  .language
    background-image url("/images/icon-language.svg");  
  .subscribe
    background-image url("/images/icon-subscribe.svg");  

.navigation-pc
  display none

  & > ul
    display flex
  li
    margin-right 35px;
    &:last-child
      margin-right 0;  

.navigation-mobile li > a
.navigation-pc li > a
  position relative;
  font-weight 500;
  color #fff;
  line-height 33px;
  font-size 16px;

  &:after
    content "";
    display none
    position absolute;
    bottom -5px;
    right 0;
    left 0;
    width 16px;
    margin auto;
    background: #f3f3f3;
    height 2px
    border-radius 2px;


  &.active
    &::after
      display block

// 不让滚动条滚动
.not_scroll 
  touch-action none

// 导航杠杠的样式
.navigation-toggle
  display flex;
  flex-flow column;
  justify-content space-between;
  width 44px;
  height 44px;
  transition all 0.5s;
  background none
  border none
  outline none
  z-index 100
  .text
    position absolute
    overflow hidden
    clip rect(0px, 0px, 0px, 0px)
    height 1px
    width 1px
    margin -1px
    padding 0px
    border 0px
  &:before
  &:after
    content ''
    display block
    position relative;
    width 24px;
    height 3px;
    margin auto
    background-color #fff;
    border-radius 3px;
    transition 0.5s;
  
  &:before
    margin-top 15px
  &:after
    margin-bottom 15px
  
  &.active
    &:before
      transform translateY(6px) rotate(45deg)
    &:after
      transform  translateY(-5px) rotate(-45deg)
    
  

// 杠杠动画
@keyframes leverFirst
  0%
    transform rotate(0deg);
  
  100%
    transform rotate(45deg);
  

@keyframes leverSecond
  0%
    transform rotate(0deg);
  
  100%
    transform translateY(-11px) rotate(-45deg);
  


// 响应式
// 兼容320px - 428px手机竖屏宽度
@media (min-width 320px)
  .navigation
    .navigation-links
      margin 10px 0 !important;

// 兼容568px - 1024px手机横屏宽度
@media (min-width 768px)
  .header
    padding 16px;
    .header-title > img
      width 128px;  
    
    // 隐常横杆图标
    .header-menu
      display none; 
    
    .navigation-operation
      display block;  
    
    .navigation-pc
      display block;
    
    .navigation-operation img:nth-child(2)
      margin: 0 19px;
    
    // .module-header
    //   .line
    //     display none;  
      
    
  

// PC端
@media (min-width 900px)
  .header
    padding 20px 0
    
   .navigation-operation
      margin-right 5%;
      > div:nth-child(2)
        margin: 0 46px;
      
   
   
