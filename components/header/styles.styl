// 头部
.header
  padding 12px 16px;
  box-sizing border-box;
  background-color #0d5afe;

  .header-main
    display flex;
    align-items center;
    justify-content space-between;  
  
  .logo
    display: block;
    width: 130px;
    height: 60px;

    a
      display: block;
      width 100%;
      height 100%
      background: url(https://image-hosting.xiaoxili.com/img/20200712201536.png) no-repeat;
      background-size: contain;
      text-indent: -9999px;
      overflow: hidden;

    // background: url(https://image-hosting.xiaoxili.com/img/20200712201537.png) no-repeat;

    // background-image: url(https://image-hosting.xiaoxili.com/img/20200712201536.png);
  

// 导航菜单
.navigation
  display none;
  position fixed;
  top 0;
  left 0;
  bottom 0;
  right 0;
  z-index 10;
  padding 31px 31px 31px 40px;
  background-color rgba(13, 90, 254, .9);
  box-sizing border-box;
  animation: 0.5s navigationOpacity;
  &.active
    display block;
  
  @keyframes navigationOpacity
    0%
      opacity 0;  
    
    100%
      opacity 1;  
    
  
  .navigation-menu
    position absolute;
    right 20px;
    top 26px;
    margin 0;
    > div
      width 32px;
      background-color #f3f3f3
      &:nth-child(1)
        top 12px;
        transform: rotate(45deg);
      
      &:nth-child(2)
        top 1px;
        transform: rotate(-45deg);
      
    
  
  .navigation-links
    margin 38px 0 36px 0;
    > li
      margin-bottom 29px;
      font-size 16px;  
      &:last-child
        margin-bottom 0;  
      
    
  
  &.active .navigation-links li a
    font-size 20px;  
  

.navigation-operation
  div
    display inline-block;
    width 24px;
    height 24px;
    background-size 100% 100%;
    &:nth-child(1)
      background-image url("/images/themoom.png");  
    
    &:nth-child(2)
      margin 0 20px;
      background-image url("/images/language.png");
    
    &:nth-child(3)
      background-image url("/images/subscribe.png");  
    
  

.navigation-links li a
.navigation-pc > a
  position relative;
  font-weight 500;
  color #fff;
  line-height 33px;
  font-size 16px;
  &.active
    &::after
      content "";
      position absolute;
      bottom -5px;
      right 0;
      left 0;
      width 30%;
      margin auto;
      background: #f3f3f3;
      height 2px
      border-radius 2px;

// 不让滚动条滚动
.not_scroll 
  touch-action none

// 导航杠杠的样式
.header-menu, .navigation-menu
  display flex;
  flex-flow column;
  justify-content space-between;
  width 24px;
  height 15px;
  transition all 0.5s;
  > div
    position relative;
    width 100%;
    height 3px;
    background-color #fff;
    border-radius 5px;
  
  &.active
    > div:first-of-type
      animation: 0.5s leverFirst;
    
    > div:last-child
      animation: 0.5s leverSecond;
    
  

// 杠杠动画
@keyframes leverFirst
  0%
    transform rotate(0deg);
  
  100%
    transform rotate(45deg);
  

@keyframes leverSecond
  0%
    transform rotate(0deg);
  
  100%
    transform translateY(-11px) rotate(-45deg);
  


// 响应式
// 兼容320px - 428px手机竖屏宽度
@media (min-width 320px)
  .header
    // navbar 导航
    .navigation-pc, .navigation-operation
      display none;
    
    .navigation
      .navigation-links
        margin 10px 0 !important;
      
    
  

// 兼容568px - 1024px手机横屏宽度
@media (min-width 768px)
  .header
    padding 16px;
    .header-title > img
      width 128px;  
    
    // 隐常横杆图标
    .header-menu
      display none; 
    
    .navigation-operation
      display block;  
    
    // navbar 导航
    .navigation-pc
      display flex;
      & > a
        margin-right 35px;
        &:last-child
          margin-right 0;  
        
      
    
    .navigation-operation img:nth-child(2)
      margin: 0 19px;
    
    .module-header
      .line
        display none;  
      
    
  

// PC端
@media (min-width 900px)
  .header
    padding 20px 0; 
    .header-main
      display: flex;
      align-items: center;
      justify-content: space-between;
      max-width 80%;
      margin auto;
    
   .navigation-operation
      margin-right 5%;
      > div:nth-child(2)
        margin: 0 46px;
      
   
   
