.blog-hero-post
  background-color var(--color-module-bar) 
.blog-hero-main
  background url('https://image-hosting.xiaoxili.com/img/img/20210415/f826bcdfe3c123980af70c522a88a3a8-56d197.png') no-repeat right bottom
  background-size 100% auto
  padding 16px 16px 50%
  
  

  h2
    font-size 28px
    color var(--color-title)
  h3
    font-size 16px
    color var(--color-title)
  
  .read-more
    margin-top 30px
    background-color transparent
    text-align center
    width: 160px;
    line-height: 48px;
    border: 1px solid var(--color-primary)
    color var(--color-primary)

.blog-module
  padding-top 24px
.blog-cateries
.blog-tags-cloud
  display flex
  flex-wrap wrap
  justify-content center

  li
    margin 0 8px 10px

    a
      display block
      padding 0 10px
      line-height 1.8

// 移动端横屏
@media (min-width 768px)
  .blog-hero-main
    background-size 899px auto
    padding 16px 16px 50%


    h2
      font-size 56px
    h3
      font-size 32px
// 移动端横屏
@media (min-width 1024px)
  .blog-module
    padding-top 48px
  .blog-hero-main
    background-size 899px auto
    background-position right center
    padding 32px 32px
    height 463px
    display flex
    align-items center
  
    h2
    h3
      width 56%

@media (min-width 1200px)
    
  .blog-hero-main
    padding 32px 0
    width 1200px
    margin 0 auto
