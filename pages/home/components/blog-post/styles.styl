.blog-post
  background-color rgba(249, 251, 255, 1)
  padding 50px 0

  .blog-wrap
    max-width 1200px
    margin 0 auto
    padding 0 16px

    .block-news
      cursor pointer
      background-color #fff
      padding-bottom: 26px;

      .pic
        display block
        height auto
        width 100%

      .title
        margin 20px 16px 8px
        font-size 18px
        line-height 1.4
        font-weight 400
        color #333

      .info
        padding 0 16px
        line-height 1.4
        font-size 16px
        color #777

    .block-list
      .block-item
        display flex
        justify-content flex-start
        align-items center
        margin-top 20px
        padding 3px 0
        cursor pointer
        background-color #fff

        .date
          padding 0 25px
          text-align center

          span
            display block
            font-size 24px
            color rgba(13, 90, 254, 0.4)
            font-weight 700

            & + span
              font-size 18px

        .line
          width 1px
          height 113px
          background-color rgba(13, 90, 254, 0.4)

        .content
          padding 0 25px

          h3
            padding 5px 0 14px
            font-size 16px
            color #333
            line-height 1.4

          .info
            display -webkit-box
            overflow hidden
            -webkit-box-orient vertical
            text-overflow ellipsis
            word-break break-all
            -webkit-line-clamp 2
            font-size 14px
            color #777
            line-height 20px

          .more
            float right
            margin 8px 0 0 0
            font-size 12px
            color #333
            line-height 17px

            img
              width 19px
              height  auto
              vertical-align middle
              display inline-block
              margin -3px 0 0 9px
// 移动端横屏
@media (min-width 768px)
  .blog-post

    .blog-wrap
      display flex

      .block-news
        max-width 343px
        margin-right 20px
      .block-list
        .block-item:first-child
          margin-top 0

// PC
@media (min-width 1024px)
  .blog-post

    .blog-wrap
      max-width 1200px
      padding 0 32px
      .block-news
        max-width 460px
        .pic
          margin-bottom 35px


      .block-list

        .block-item
          padding 18px 0
