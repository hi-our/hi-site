html.mode-dark
  .open-main
    .content .list
      .list-img
      .list-mask
        filter invert(1) hue-rotate(180deg)
      
.open-main
  padding-bottom 60px

  .content
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    padding: 0 16px
    max-width 1200px
    margin 0 auto

    .list
      width 47.8%
      padding 38px 0 33px
      text-align center
      background: var(--color-module-bg)
      position: relative
      cursor:pointer
      
      &:nth-child(3)
      &:nth-child(4)
        margin-top 20px
      
      &:hover
        .list-mask
          opacity: 0.4
          visibility visible
          transition: all 0.5s ease
        
      .list-img
        margin auto
        display block
        width: 101px
        height: 96px 
        background: url(/images/open-resources/3d-swiper-bg-mini.png) no-repeat center center
        background-size: 100% 
      
        
      .list-icon-img
        display:inline-block
        width: 52px
        height: 52px
        margin: 24px
        
              
      .list-line
        height: 1px
        background: var(--color-primary)
        width: 60px;
        margin: 30px auto 14px auto
        
            
      > h3
        height: 30px
        font-weight: 400
        font-size 16px
        line-height 1.4
        color: #333333
        
          
      > p
        font-weight: 400
        font-size 12px
        color: #777777
              
          
      .list-mask
        position: absolute
        display flex
        left: 0
        top: 0 
        width: 100%
        height: 100%
        background: rgba(0, 0, 0, 0.4)
        text-align: center
        opacity: 0
        visibility hidden
        transition: all 0.5s ease

        img
          display block
          margin: auto

// 宽度大于768px时
@media  (min-width 768px) 
  .open-main

    .content
      .list
        width: 148px;
        
        &:nth-child(3)
        &:nth-child(4)
          margin-top 0
 

// 屏幕尺寸大于1024时
@media  (min-width 1024px) 
  .open-main
    .content
      padding: 0 32px
      .list
        width: 225px;
        
        > h3            
          font-size: 18px;           
        
        > p        
          font-size: 16px;

// 屏幕尺寸大于1200时
@media  (min-width 1200px) 
   .open-main
      .content
        padding: 0

        .list
          width: 270px;
